<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="#ff8800"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round"
            />
        <TextView
            android:id="@+id/headingTextview"
            android:layout_toRightOf="@id/imageView"
            android:layout_margin="@dimen/marginBTWimageAndtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/HeadingTextview"
            android:text="I AM HEADING"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/paraTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/headingTextview"
            android:layout_below="@id/headingTextview"
            android:text="I AM A Para"
            android:textSize="@dimen/paraTextview"
            android:textColor="#ffffff"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>